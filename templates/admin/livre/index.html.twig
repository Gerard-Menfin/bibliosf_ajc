{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
    <h1>Liste des livres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Catégories</th>
                <th>Résumé</th>
                <th>Couverture</th>
                <th><i class="fa fa-gear"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.auteur.identite }}</td>
                <td>
                    {# La variable 'loop' permet d'avoir des informations sur les itérations
                        (tours de boucles)  #}
                    {% for categorie in livre.categories %}
                        {{ categorie.libelle ~ (loop.last ? "" : ", ") }}
                    {% else %}
                        _
                    {% endfor %}
                </td>
                <td>{{ livre.resume }}</td>
                <td>{{ livre.couverture }}</td>
                <td>
                    <a href="{{ path('app_admin_livre_show', {'id': livre.id}) }}">
                        <i class="fa fa-book"></i>
                    </a>
                    <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun livre enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_livre_new') }}" class="btn btn-secondary">
        <i class="fa fa-plus"></i> Ajouter un livre
    </a>
{% endblock %}
